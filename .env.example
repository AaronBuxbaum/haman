# Anthropic API Key (required)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cron Secret (required for Vercel deployments)
# Generate a secure random string for protecting cron endpoints
CRON_SECRET=your_secure_random_string_here

# Environment
NODE_ENV=development

# Feature Flags (optional - for future enhancements)
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEB_INTERFACE=false
ENABLE_DATABASE_PERSISTENCE=false

# Database Configuration (when ENABLE_DATABASE_PERSISTENCE=true)
# DATABASE_TYPE=memory  # Options: memory, dynamodb, postgresql
# AWS_REGION=us-east-1
# POSTGRES_CONNECTION_STRING=postgresql://user:pass@localhost:5432/haman

# Email Configuration (when ENABLE_EMAIL_NOTIFICATIONS=true)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password
# EMAIL_FROM=noreply@example.com

# Web Interface (when ENABLE_WEB_INTERFACE=true)
# WEB_PORT=3000
# JWT_SECRET=your-secret-key
