{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "functions": {
    "pages/api/scrape-shows.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "pages/api/apply-lotteries.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "pages/api/apply-lotteries-cron.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/apply-lotteries-cron",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/refresh-shows-cron",
      "schedule": "0 8 * * *"
    }
  ]
}
