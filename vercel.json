{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0",
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "NODE_ENV": "production",
    "CRON_SECRET": "@cron-secret"
  },
  "crons": [
    {
      "path": "/api/apply-lotteries",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/apply-lotteries",
      "schedule": "0 16 * * *"
    }
  ]
}
