{
  "manifest_version": 3,
  "name": "Haman - Broadway Lottery Automation",
  "version": "1.0.0",
  "description": "Automatically apply to Broadway show lotteries with AI-powered preference matching",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://lottery.broadwaydirect.com/*",
    "https://www.luckyseat.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Haman - Broadway Lottery"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lottery.broadwaydirect.com/*",
        "https://www.luckyseat.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
